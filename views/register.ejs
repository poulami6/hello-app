<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <% include ./include/header %>
    <% if (typeof errors !== 'undefined'){ %>
        <p>there are errors on page</p>
        <% for (const error of errors){ %>
        <li><%= error.msg %> </li>
        <% } %>
        <% }  %>

    <form class="add-player-form" action="/add" method="post" enctype="multipart/form-data">
      <div class="form-row">
          <div class="form-group col-md-4">
              First Name: <input type="text" class="form-control" name="first_name" id="first-name" placeholder="First Name" >
          </div>
          <div class="form-group col-md-4">
           Last Name:   <input type="text" class="form-control" name="last_name" id="last-name" placeholder="Last Name" >
          </div>
          <div class="form-group col-md-4">
            Email: <input type="text" class="form-control" name="email" id="email" placeholder="Email" >
        </div>
          <div class="form-group col-md-4">
             Username:  <input type="text" class="form-control" name="username" id="username" placeholder="Username" >
          </div>
      </div>
      <div class="form-row">
          <div class="form-group col-md-6">
              Number: <input type="number" class="form-control" name="number" id="number" placeholder="Number" >
          </div>
          <div class="form-group col-md-6">
            Position:   <select id="position" name="position" class="form-control" >
                  <option selected disabled>Choose position</option>
                  <option>Goalkeeper</option>
                  <option>Centre Back</option>
                  <option>Right Back</option>
                  <option>Left Back</option>
                  <option>Defensive Midfielder</option>
                  <option>Central Midfielder</option>
                  <option>Attacking Midfielder</option>
                  <option>Right Wing Forward</option>
                  <option>Left Wing Forward</option>
                  <option>Striker</option>
              </select>
          </div>
          <div class="col-md-12">
              <label for="player-img"><b>Player Image</b></label><br>
              <input type="file" name="image" id="player-img" class="" >
          </div>
      </div>
      <button type="submit" class="btn btn-primary float-right">Add Player</button>
  </form>
    <% include ./include/footer %>
  </body>
  <% include ./include/scripts %>  
</html>